@page "{handler?}"
@using WordVision.ec.Web.Pages
@model IndexModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>World Vision</title>
    <partial name="_Styles" />
</head>
<body>
    @*@foreach (string item in Model.DataFromApi)
    {
        <p>@item</p><br />
    }*@
    <div class="container ">
        <div class="row vh-100 justify-content-center align-items-center">
            <div class="col-md-4">
                <div class="card border-secondary mb-3" style="border-radius: 3px 3px 3px 3px;box-shadow: 0px 0px 5px;">
                    <div class="card-header justify-content-center align-items-center">
                        <center>
                            <img src="~/images/logo.svg" />
                        </center>

                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-12">
                                <section>
                                    <form method="post" role="form" class="form-horizontal">
                                        @Html.AntiForgeryToken()

                                        <h6>Ingrese su usuario de la Red</h6>

                                        <br />
                                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                        <div class="form-group">
                                            @Html.LabelFor(m => m.LoginModel.UserNameRegular, "Usuario", new { @class = "col-md-12 control-label" })
                                            <div class="col-md-12">
                                                @Html.TextBoxFor(m => m.LoginModel.UserNameRegular, new { @Value = @Environment.UserDomainName, @class = "form-control" })
                                                @Html.ValidationMessageFor(m => m.LoginModel.UserNameRegular, "", new { @class = "text-danger" })
                                            </div>
                                        </div>
                                        <br />
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <button asp-page-handler="LogIn" class="btn btn-default-login">Continuar</button>
                                            </div>
                                        </div>
                                    </form>
                                </section>
                            </div>
                        </div>

                    </div>

                </div>
            </div>
        </div>
    </div>
    <partial name="_Scripts" />
    @await Component.InvokeAsync("Notyf")


</body>
</html>