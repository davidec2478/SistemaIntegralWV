@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using WordVision.ec.Web.Areas.Soporte.Models
@model SolicitudViewModel


<form id="create-form" method="post" asp-controller="Solicitud" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">

    <div class="row">
        <div class="col-md-12">
            <input type="hidden" value="Mensajeria" asp-for="TipoSistema" name="TipoSistema" class="form-control">
            <input type="hidden"  asp-for="Op" name="Op" class="form-control">
            <input type="hidden" asp-for="Solicitante" name="Solicitante" value="@Convert.ToInt32(User.Claims.FirstOrDefault(x => x.Type == "Id")?.Value)" class="form-control">
            @if (Model.Estado == 2)
            {
                <div class="form-group row">
                    <div class="col-md-6">
                        <label class="col-md-12 col-form-label texto-pregunta">Asignar a</label>
                        @Html.DropDownListFor(x => x.AsignadoA, (IEnumerable<SelectListItem>)Model.AsignadoAList, new { @class = "form-control" })

                        <span asp-validation-for="AsignadoA" class="text-danger"></span>
                    </div>
                </div>

            }
            <div class="form-group row">
                <div class="col-md-2">
                    <label class="col-md-12 col-form-label texto-pregunta">Estado</label>
                    @Html.DropDownListFor(x => x.Estado, (IEnumerable<SelectListItem>)Model.EstadoList, new { @class = "form-control", @disabled = "disabled" })

                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="col-md-4">
                    <label class="col-md-12 col-form-label texto-pregunta">Persona de contacto</label>
                    <input type="text" asp-for="PersonaaContactar" name="PersonaaContactar" class="form-control">
                    <span asp-validation-for="PersonaaContactar" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label class="col-md-12 col-form-label texto-pregunta">Teléfono</label>
                    <input asp-for="Telefono" name="Telefono" class="form-control">
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="col-md-3">
                    <label class="col-md-12 col-form-label texto-pregunta">Celular</label>
                    <input asp-for="Celular" name="Celular" class="form-control" />
                    <span asp-validation-for="Celular" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-6">
                    <label class="col-md-12 col-form-label texto-pregunta">Fecha requerida</label>
                    <input type="text" asp-for="FechaRequerida" name="FechaRequerida" class="datepicker form-control" />
                    <span asp-validation-for="FechaRequerida" class="text-danger"></span>
                </div>

                <div class="col-md-6">
                    <label class="col-md-12 col-form-label texto-pregunta">Archivo adjunto</label>
                    <div class="custom-file form-image">
                        <input accept="*.*"
                               asp-for="@Model.Archivo"
                               type="file" class="custom-file-input"
                               id="customFile" required>

                        @if (Model.Archivo != null && Model.Archivo.Length > 0)
                        {
                            <label class="custom-file-label" for="customFile">Archivo almacenado</label>
                        }
                        else
                        {
                            <label class="custom-file-label" for="customFile">Buscar Archivo</label>
                        }
                    </div>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-12">
                    <label class="col-md-12 col-form-label texto-pregunta">Descripción del tramite</label>
                    <textarea asp-for="DescripcionTramite" name="DescripcionTramite" class="form-control"></textarea>
                    <span asp-validation-for="DescripcionTramite" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <label class="col-md-12 col-form-label texto-pregunta">Dirección</label>
                    <textarea asp-for="Direccion" name="Direccion" class="form-control"></textarea>
                    <span asp-validation-for="Direccion" class="text-danger"></span>
                </div>

            </div>
            <div class="form-group row">
                <div class="col-md-12">
                    <label class="col-md-12 col-form-label texto-pregunta">Información Adicional</label>
                    <textarea asp-for="InformacionAdicional" name="InformacionAdicional" class="form-control"></textarea>
                    <span asp-validation-for="InformacionAdicional" class="text-danger"></span>
                </div>

            </div>

        </div>
        </div>


    <br />
    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        <button type="submit" class="btn btn-success">Guardar</button>
        <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancelar</button>
    </div>
</form>

