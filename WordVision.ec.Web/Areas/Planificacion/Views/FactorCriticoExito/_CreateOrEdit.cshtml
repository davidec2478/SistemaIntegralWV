@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@using WordVision.ec.Web.Areas.Planificacion.Models
@model FactorCriticoExitoViewModel


<form id="create-form" method="post" asp-controller="FactorCriticoExito" asp-action="OnPostCreateOrEdit" asp-route-id="@Model.Id" onsubmit="return jQueryModalPost(this);" enctype="multipart/form-data">
    @Html.HiddenFor(x=>x.IdObjetivoEstra)
    <div class="row">
        <div class="col-md-12">
            <div class="form-group row">
                <div class="col-md-12">
                    <label class="col-md-12 col-form-label texto-pregunta">Factor Crítico de Éxito / Resultado</label>

                    <textarea asp-for="FactorCritico" name="FactorCritico" class="form-control"></textarea>
                    <span asp-validation-for="FactorCritico" class="text-danger"></span>
                </div>

            </div>


        </div>
    </div>
    
    <br />
    <div class="form-group justify-content-between" style="margin-bottom: 0px !important">
        @if ((AuthorizationService.AuthorizeAsync(User, Permissions.FactorCriticoExito.Create)).Result.Succeeded)
        {   <input type="hidden" value="false" name="band" id="band" />
            <button type="submit" class="btn btn-success">Guardar</button>
        }
        else { <input type="hidden" value="true" name="band" id="band" />}
            <button type="submit" class="btn btn-default close-button" data-dismiss="modal">Cancelar</button>
        </div>
</form>


        
<script type="text/javascript" language=javascript>


    $.validator.unobtrusive.parse(document);
    $(function () {
       
        $('#create-form *').prop('readonly', (document.getElementById("band").value == "true"));
        $(".datepicker").datepicker({ dateFormat: 'dd-mm-yy' });
        //$("#VigDesde").datepicker({ dateFormat: 'dd-mm-yy' });
        //$("#VigHasta").datepicker({ dateFormat: 'dd-mm-yy' });

    });

    $("#BrandId").select2({
    placeholder: "Select a Category",
        theme: "bootstrap4",
        escapeMarkup: function (m) {
            return m;
        }
    });


</script>
