@using WordVision.ec.Web.Areas.Planificacion.Models
@model IEnumerable<AnioFiscalViewModel>

<table id="anioFiscalTable" class="table table-striped " width="100%" cellspacing="0">
    <thead>
        <tr>

            <th data-priority="1">Nombre</th>
            <th>Estado</th>
            <th data-priority="2">Editar</th>
           
        </tr>
    </thead>
    <tbody>

        @foreach (var anioFiscal in Model)
        {
            <tr>

                <td>
                    @anioFiscal.Nombre
                </td>
                <td>
                    @anioFiscal.Estado
                </td>

                <td>
                    <a  asp-area="planificacion" asp-controller="aniofiscal" asp-action="OnGetCreateOrEdit" asp-route-id="@anioFiscal.Id" class="btn btn-info btn-xp"><i class="fas fa-pencil-alt"></i>  Editar</a>

                </td>
                

            </tr>
        }
    </tbody>
</table>
<script>

    $(document).ready(function () {
        var table = $("#colaboradorTable").DataTable({
            aoColumnDefs: [
                { "aTargets": [0], "bSortable": true },
                { "aTargets": [2], "asSorting": ["asc"], "bSortable": true },
            ],
            "language": {
                "url": "../lib/datatables/language/Spanish.json"
            },

            responsive: true,
            columnDefs: [
                { responsivePriority: 1, targets: 0 },
                { responsivePriority: 2, targets: -1 }
            ],
            "info": false
