
@using WordVision.ec.Web.Areas.Planificacion.Models
@model ProductoViewModel

@{
    ViewData["TitleCategoria"] = localizer["Categoría"].Value + " " + ViewBag.Categoria;
    ViewData["Tmp"] = "Objetivo: ";
    ViewData["Objetivo"] = ViewBag.Message;

    ViewData["TmpFactor"] = "Factor Crítico de Exito: ";
    ViewData["Factor"] = Model.DescFactorCritico;

    ViewData["TmpIndicador"] = localizer["Indicador Estratégico:"];
    ViewData["Indicador"] = ViewBag.Indicador;
    ViewData["Caption"] = localizer["Gestionar Producto aquí"];

    ViewData["TmpGestion"] = "Meta "+Model.DescGestion+":";
    ViewData["Gestion"] = Model.DescMetaGestion;
}
    <div class="card">

        <div class="col-sm-12 header-button">

            <button type="button" class="btn btn-primary" id="btnViewModel" onclick="jQueryModalGet('/Planificacion/Producto/OnGetCreateOrEdit?id=0&idGestion=@Model.IdGestion&idIndicadorEstra=@Model.IdIndicadorEstrategico','Producto')">
                <i class="fa fa-plus-square"></i>
                Agregar
            </button>

        </div>
        <div id="viewAll" class="card-body table-responsive">
        </div>
    </div>


